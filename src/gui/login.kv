

<LoginWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: "../../resources/fonts/Sackers-Gothic-Std-Light.ttf"
        text: root.parent.login_title
        pos_hint: {"center_x": .5, "center_y": .8}

    TextInput:
        id: name
        pos_hint: {"center_x": .5, "center_y": .55}
        size_hint: .25, .07
        text: "name"

    TextInput:
        id: case
        pos_hint: {"center_x": .5, "center_y": .45}
        size_hint: .25, .07
        text: "case"
        multiline: False


    Button:
        id: login_button
        font_size: dp(30)
        font_name: "../../resources/fonts/Eurostile.ttf"
        text: root.parent.login_button_title
        pos_hint: {"center_x": .5, "center_y": .2}
        size_hint: .17, .1
        on_release: root.parent.on_login_button_pressed(name.text, case.text)
        background_normal: ''
        background_color: .4, .3, 1, .85